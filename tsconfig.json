{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": [
      "ES2017",
      "ES2020"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "incremental": true,

    "paths": {
      "@App/*": ["src/*"],
      "lib/*": ["common/*"]
    },

    

    

    

  },

  "include": [
    "src/**/*",
    "./*.env"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
  
}
